<table>
	<tr>
		<th>Name</th>
		<th>Quantity</th>
		<th>Price</th>

	</tr>
	
	<% @unique_foods.each do |food| %>
		<tr>
			<td><%= food.name %></td>
			<td><%= @quantities[food] %></td>
			<td><%= food.price %></td>
		</tr>
	<% end %>
</table>

