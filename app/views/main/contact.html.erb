<div class="contact_form">
	<h1><u><%=t ('.title') %></u></h1>

	<p id="instruction"><u><%=t ('.instruction') %></u></p>

	<%= form_tag request_contact_path do %>

		<div class="field">
			<%= label_tag :name, t('.name') %> <br>
			<%= text_field_tag :name, '', size: 50 %> <br>
		</div>

		<div class="field" id="email">
			<%= label_tag :email, t('.email') %> <br>
			<%= text_field_tag :email %> <br>
		</div>

		<div class="field">
			<%= label_tag :telephone, t('.telephone') + "(optional)" %> <br>
			<%= text_field_tag :telephone %> <br>
		</div>

		<div class="field">
			<%= label_tag :message, t('.message') %> <br>
			<%= text_area_tag :message %> <br>
		</div>

		<%= submit_tag "Submit" %>

	<% end %><br>
</div>



